# Docker images
FRONTEND_IMAGE=ghcr.io/your-org/domilix-frontend:latest
BACKEND_IMAGE=ghcr.io/your-org/domilix-backend:latest

# Domains routed by Traefik
FRONTEND_HOST=domilix.com
BACKEND_HOST=api.domilix.com

# External Traefik setup
TRAEFIK_NETWORK=traefik
TRAEFIK_ENTRYPOINT=websecure
TRAEFIK_CERTRESOLVER=le

# MySQL
DB_ROOT_PASSWORD=change-me
DB_DATABASE=domilis
DB_USERNAME=domilix
DB_PASSWORD=change-me

# Laravel app env (used by backend container via env_file)
APP_NAME=Domilix
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.domilix.com
VIEW_COMPILED_PATH=/var/www/html/storage/framework/views
L5_SWAGGER_USE_ABSOLUTE_PATH=false
