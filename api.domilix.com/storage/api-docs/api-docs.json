        "/api/addresses/search": {
            "get": {
                "tags": [
                    "Addresses"
                ],
                "summary": "Search addresses",
                "operationId": "a621fd59c9f0d43e6e59d4247eeea178",
                "parameters": [
                    {
                        "name": "query",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "proximity[]",
                        "in": "query",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 5
                        }
                    },
                    {
                        "name": "types[]",
                        "in": "query",
                        "description": "Mapbox types filter",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "country",
                                    "region",
                                    "postcode",
                                    "district",
                                    "place",
                                    "locality",
                                    "neighborhood",
                                    "address",
                                    "poi"
                                ]
                            }
                        }
                    },
                    {
                        "name": "country",
                        "in": "query",
                        "description": "ISO-3166 country code",
                        "schema": {
                            "type": "string",
                            "example": "cm"
                        }
                    },
                    {
                        "name": "language",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "example": "fr"
                        }
                    },
                    {
                        "name": "bbox[]",
                        "in": "query",
                        "description": "Bounding box: minLon,minLat,maxLon,maxLat",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        }
                    },
                    {
                        "name": "autocomplete",
                        "in": "query",
                        "schema": {
                            "type": "boolean",
                            "default": true
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Address results"
                    }
                }
            }
        },
